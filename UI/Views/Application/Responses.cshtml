@model IEnumerable<Business.Entities.Response>

@{
    Layout = "";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr class="thead-dark">
            <th>
                @Html.DisplayNameFor(model => model.ResponseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.ResponseType)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.ResponseDate)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td class="fitwidth">
                    @Html.ActionLink(" ", "Edit", "Response", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit" })
                    @Html.ActionLink(" ", "Details", "Response", new { id = item.Id }, new { @class = "glyphicon glyphicon-search", title = "Details" })
                    @Html.ActionLink(" ", "Delete", "Response", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete" })
                </td>
            </tr>
        }
    </tbody>
</table>
