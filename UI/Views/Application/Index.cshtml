@model IEnumerable<Business.Entities.Application>

@{
    ViewBag.Title = "Applications";
}

<div class="clearfix">
    <div class="box">
        <h4>Applications</h4>
    </div>
    <div class="box">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubmitDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.SubmitDate)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td class="">
                    @Html.DisplayFor(modelItem => item.Requirements)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td class="fitwidth">
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit" })
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search", title = "Details" })
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete" })
                </td>
            </tr>
        }
    </tbody>
</table>
