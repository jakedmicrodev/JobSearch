@model IEnumerable<Business.Entities.Interview>

@{
    Layout = "";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr class="thead-dark">
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.InterviewDate)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.InterviewType)
                </td>
                <td>
                    <p>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </p>
                </td>
                <td class="fitwidth">
                    @Html.ActionLink(" ", "Edit", "Interview", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit" })
                    @Html.ActionLink(" ", "Details", "Interview", new { id = item.Id }, new { @class = "glyphicon glyphicon-search", title = "Details" })
                    @Html.ActionLink(" ", "Delete", "Interview", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete" })

                </td>
            </tr>
        }
    </tbody>
</table>
