
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutNarrow.cshtml";
}

<style>

    .column {
        float: left;
        width: 250px;
        color: #fff;
        padding: 10px;
        margin: 10px;
        background: #3db5da;
        border-radius: 10px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    h3 {
        color: #5caac1;
    }
</style>


<div id="boxes">
    <h3>What would you like to create?</h3>
    <div class="row">
        <a href=@Url.Action("Create", "Application")>
            <div class="column">
                <h2>Application</h2>
                Add a new job application
            </div>
        </a>

        <a href=@Url.Action("Create", "ApplicationType")>
            <div class="column">
                <h2>Application Type</h2>
                Add a new application type
            </div>
        </a>

        <a href=@Url.Action("Create", "Company")>
            <div class="column">
                <h2>Company</h2>
                Add a new company
            </div>
        </a>

        <a href=@Url.Action("Create", "Contact")>
            <div class="column">
                <h2>Contact</h2>
