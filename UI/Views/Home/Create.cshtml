            </div>
        </a>

        <a href=@Url.Action("Create", "ContactType")>
            <div class="column">
                <h2>Contact Type</h2>
                Add a new contact type
            </div>
        </a>

        <a href=@Url.Action("Create", "InterviewType")>
            <div class="column">
                <h2>Interview Type</h2>
                Add a new interview type
