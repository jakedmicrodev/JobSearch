@model IEnumerable<Business.Entities.Interview>

@{
    ViewBag.Title = "Index";
}

<h2>Interviews</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.InterviewDate)
                </td>
                <td class="fitwidth">
                    @Html.DisplayFor(modelItem => item.InterviewType)
                </td>
                <td class="">
                    <p>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </p>
                </td>
                <td class="fitwidth">
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit" })
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search", title = "Details" })
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete" })
                </td>
            </tr>
        }
    </tbody>
</table>
